<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".signupass"
    android:background="#f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38.3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="32dp"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center_horizontal"
                android:text="CASH"
                android:textColor="#38b5f2"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="7.3dp"
                    android:background="@drawable/small_cicle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/half_circle"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/half_circle"></FrameLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:paddingLeft="14.5dp">

            <View
                android:layout_width="5.6dp"
                android:layout_height="700dp"
                android:background="#38b5f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="35.6dp"
                android:background="@drawable/rectangle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="800dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="19dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.3dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_horizontal"
                        android:text="Inscription"
                        android:textColor="#38b5f2"
                        android:textSize="25sp" />


                    <EditText
                        android:id="@+id/noma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Nom"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/prenoma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Prénom"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/adressea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Adresse"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/steassurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Société d'assurance"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/numpolice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="N°police"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/datevald"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Attest valable du"
                        android:inputType="date"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/datevala"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Attest valable au"
                        android:inputType="date"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/martyv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Marque, Type véhicule"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/immatriv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Immatriculation véhicule"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/agencea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Agence"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/emaila"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/passworda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#38b5f2"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Mot de passe"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="18sp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnsignup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#38b5f2"
                        android:text="S'inscrire"
                        android:textAllCaps="false"
                        android:textColor="#f2f2f2"
                        android:textSize="23dp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Vous avez déjà un compte ? "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Connectez-vous."
            android:textColor="#38b5f2"
            android:textSize="15dp" />

        <LinearLayout
            style="@style/parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <ImageView
                style="@style/parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_login_bk"
                android:contentDescription="login background" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>